<Page x:Class="MainScene.View.Pages.FinishPayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainScene.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinishPayment">

    <Grid>
        <Grid Width="300" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="20" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="price">금액 :</TextBlock>
            <TextBlock Grid.Row="1" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center">주문 번호 : </TextBlock>
            <TextBlock Grid.Row="2" FontSize="20" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center">결제되었습니다.</TextBlock>
            <TextBlock Grid.Row="3" FontSize="20" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center">5초후 홈 화면으로 이동합니다.</TextBlock>
        </Grid>
    </Grid>
</Page>
