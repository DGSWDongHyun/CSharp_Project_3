<Page x:Class="MainScene.View.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainScene"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <MediaElement Name ="admv" Grid.Row="0" Source="../../Resources/admv.mp4" MediaEnded="admv_MediaEnded" LoadedBehavior="Manual"/>

        <Button Grid.Row="1" Content="다음페이지로" HorizontalAlignment="Center" Width="300" Click="Button_Click" Height="70" VerticalAlignment="Center"/>

    </Grid>
</Page>