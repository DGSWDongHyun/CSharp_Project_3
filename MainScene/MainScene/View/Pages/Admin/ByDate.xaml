<Page x:Class="MainScene.View.Pages.Admin.ByDate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainScene.View.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ByDate">

    <Grid>
        <StackPanel Margin="10">
            <DatePicker Height="20" HorizontalAlignment="Left" Margin="5 0 0 0" Name="datePicker1" VerticalAlignment="Top" Width="115" SelectedDateChanged="dpick_SelectedDateChanged" />

            <StackPanel Orientation="Horizontal">
                <Label Content="오전"></Label>
                <Label x:Name="amLabel"  Content="200000"></Label>
                <Label Content="원"></Label>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="오후"></Label>
                <Label x:Name="pmLabel" Content="200000"></Label>
                <Label Content="원"></Label>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="합계"></Label>
                <Label x:Name="totalLabel" Content="200000"></Label>
                <Label Content="원"></Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
