<Window x:Class="MainScene.View.Windows.Adminwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainScene.View.Windows"
        mc:Ignorable="d"
        Title="Adminwindow" Height="1080" Width="1920">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="488" Margin="85,512,0,0" VerticalAlignment="Top" Width="816">
            <Label Content="할인액 :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Height="77" Width="361" FontSize="48" Margin="9,132,0,0"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="126" Margin="81,344,0,0" VerticalAlignment="Top" Width="816"/>
        <Label Content="구동시간 :" HorizontalAlignment="Left" Margin="127,370,0,0" VerticalAlignment="Top" Height="74" Width="245" FontSize="48"/>

        <Label Content="총 매출액 : " HorizontalAlignment="Left" Margin="93,533,0,0" VerticalAlignment="Top" Height="106" Width="361" FontSize="72" RenderTransformOrigin="0.5,0.5"/>

        <Label Name="DriveTimeLabel" HorizontalAlignment="Left" Margin="372,370,0,0" VerticalAlignment="Top" FontSize="48" Height="72" Width="454"/>
        <Label Name="TotalSales" HorizontalAlignment="Left" Margin="459,533,0,0" VerticalAlignment="Top" FontSize="72" Width="424" Height="105"/>
        <Label x:Name="DiscountLabel" HorizontalAlignment="Left" Margin="459,652,0,0" VerticalAlignment="Top" Height="79" Width="423" FontSize="60" FontWeight="Bold"/>
        <Label Name="Sales" HorizontalAlignment="Left" Margin="459,742,0,0" VerticalAlignment="Top" Height="74" Width="423" FontSize="60" FontWeight="Bold"/>
        <Label Name="CardSales" HorizontalAlignment="Left" Margin="463,810,0,0" VerticalAlignment="Top" Height="81" Width="420" FontSize="40"/>
        <Label Name="CacheSales" HorizontalAlignment="Left" Margin="462,894,0,0" VerticalAlignment="Top" Height="72" Width="421" FontSize="40"/>

        <GroupBox Header="GroupBox" Height="222" Margin="987,10,28,0" VerticalAlignment="Top">
            <StackPanel Margin="10">
                <RadioButton Margin="5" GroupName="category" Content="메뉴별 판매수" Checked="RadioButton_Checked"/>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <RadioButton GroupName="category" Content="좌석별 메뉴 판매수" Checked="RadioButton_Checked_1"/>
                    <ComboBox Margin="30 0 0 0" Width="100" Height="15"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <RadioButton GroupName="category" Content="카테고리별 판매수" Checked="RadioButton_Checked_2"/>
                    <ComboBox Margin="35 0 0 0" Width="100" Height="15"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <RadioButton GroupName="category" Content="하루중 시간대별 매출액" Checked="RadioButton_Checked_3"/>
                    <ComboBox Margin="8 0 0 0" Width="100" Height="15"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <RadioButton GroupName="category" Content="회원별 총 주문메뉴" Checked="RadioButton_Checked_4"/>
                    <ComboBox Margin="33 0 0 0" Width="100" Height="15"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <Label Content="순수 매출액 :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="93,739,0,0" VerticalAlignment="Top" Height="77" Width="361" FontSize="48"/>

        <Label Content="카드 :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="93,810,0,0" VerticalAlignment="Top" Height="78" Width="361" FontSize="40"/>
        <Label Content="현금 :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="93,888,0,0" VerticalAlignment="Top" Height="78" Width="361" FontSize="40"/>

        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" x:Name="frame" RenderTransformOrigin="0.506,0.497" Margin="987,304,28,49"/>


    </Grid>
</Window>
